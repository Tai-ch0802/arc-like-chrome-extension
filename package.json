  "devDependencies": {
    "baseline-browser-mapping": "^2.10.0",
    "esbuild": "^0.27.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "puppeteer": "^24.37.5"
  },
