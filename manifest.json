{
  "manifest_version": 3,
  "name": "書籤/分頁側邊欄",
  "description": "一個模仿 Arc 瀏覽器垂直分頁的 Chrome 擴充功能。",
  "version": "1.0",
  "permissions": [
    "tabs",
    "sidePanel",
    "bookmarks"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "打開/關閉 書籤分頁側邊欄"
  }
}
