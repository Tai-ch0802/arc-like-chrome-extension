{
  "manifest_version": 3,
  "name": "書籤/分頁側邊欄",
  "description": "一個模仿 Arc 瀏覽器垂直分頁的 Chrome 擴充功能。",
  "version": "1.0",
  "permissions": [
    "tabs",
    "sidePanel",
    "bookmarks",
    "tabGroups"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "打開/關閉 書籤分頁側邊欄"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
